<UserControl x:Class="MapEditTool.Views.SelectDefenseBaseObjectPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:MapEditTool.Helpers"
             xmlns:conv="clr-namespace:MapEditTool.Converters">

    <UserControl.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <conv:IntEqualsConverter x:Key="IntEqualsConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <StackPanel>

        <TextBlock Text="Select Mode"
                   Foreground="White"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- XYZ -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">

            <TextBlock Text="X" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="45"
                        Text="{Binding X, UpdateSourceTrigger=LostFocus}"
                        Margin="0,0,10,0"/>

            <TextBlock Text="Y" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="45"
                        Text="{Binding Y, UpdateSourceTrigger=LostFocus}"
                        Margin="0,0,10,0"/>

            <TextBlock Text="Z" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="45"
                        Text="{Binding Z, UpdateSourceTrigger=LostFocus}"/>
        </StackPanel>

        <TextBlock Text="この座標には既にブロック/オブジェクトが存在します"
            Foreground="Red"
            FontWeight="Bold"
            FontSize="10"
            Visibility="{Binding PositionError, Converter={StaticResource BoolToVisibilityConverter}}"/>

        <!-- HP -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="HP" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="100"
                Text="{Binding HP, UpdateSourceTrigger=LostFocus}"
                Margin="0,0,10,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
