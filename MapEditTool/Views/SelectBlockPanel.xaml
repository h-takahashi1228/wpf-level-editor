<UserControl x:Class="MapEditTool.Views.SelectBlockPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:MapEditTool.Helpers"
             xmlns:conv="clr-namespace:MapEditTool.Converters">

    <UserControl.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <conv:IntEqualsConverter x:Key="IntEqualsConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <StackPanel>

        <TextBlock Text="Select Mode"
                   Foreground="White"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- XYZ -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">

            <TextBlock Text="X" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="45"
                        Text="{Binding X, UpdateSourceTrigger=LostFocus}"
                        Margin="0,0,10,0"/>

            <TextBlock Text="Y" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="45"
                        Text="{Binding Y, UpdateSourceTrigger=LostFocus}"
                        Margin="0,0,10,0"/>

            <TextBlock Text="Z" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="45"
                        Text="{Binding Z, UpdateSourceTrigger=LostFocus}"/>
        </StackPanel>

        <TextBlock Text="この座標には既にブロック/オブジェクトが存在します"
            Foreground="Red"
            FontWeight="Bold"
            FontSize="10"
            Visibility="{Binding PositionError, Converter={StaticResource BoolToVisibilityConverter}}"/>


        <!-- Shape -->
        <TextBlock Text="Shape" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox ItemsSource="{Binding Source={x:Static helpers:EnumProvider.BlockShapes}}"
                    SelectedItem="{Binding Shape}"
                    Margin="0,0,0,15"/>

        <!-- Type -->
        <TextBlock Text="Type" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox ItemsSource="{Binding Source={x:Static helpers:EnumProvider.BlockTypes}}"
                    SelectedItem="{Binding Type}"
                    Margin="0,0,0,15"/>

        <!-- Yaw -->
        <TextBlock Text="Rotate" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <ToggleButton Content="0°" Width="40" Margin="0,0,5,0"
                            IsChecked="{Binding Yaw,
                                Converter={StaticResource IntEqualsConverter},
                                ConverterParameter=0,
                                Mode=TwoWay}"/>

            <ToggleButton Content="90°" Width="40" Margin="0,0,5,0"
                            IsChecked="{Binding Yaw,
                                Converter={StaticResource IntEqualsConverter},
                                ConverterParameter=90,
                                Mode=TwoWay}"/>

            <ToggleButton Content="180°" Width="40" Margin="0,0,5,0"
                            IsChecked="{Binding Yaw,
                                Converter={StaticResource IntEqualsConverter},
                                ConverterParameter=180,
                                Mode=TwoWay}"/>

            <ToggleButton Content="270°" Width="40"
                            IsChecked="{Binding Yaw,
                                Converter={StaticResource IntEqualsConverter},
                                ConverterParameter=270,
                                Mode=TwoWay}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
